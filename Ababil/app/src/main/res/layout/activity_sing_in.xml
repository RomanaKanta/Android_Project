<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/wall03"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bule_transparent"
        >

<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/logo_bg_ht"
    android:layout_marginTop="@dimen/logo_bg_top_mrg"
    android:background="@drawable/logo_bg"/>

    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:src="@drawable/ababillogo2"
        android:padding="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_centerHorizontal="true"
    />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<LinearLayout
    android:id="@+id/signup_layer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:padding="@dimen/txt_padding_10"
    android:layout_marginBottom="@dimen/margin_10"
    >

    <com.mislbd.ababil.widget.AppTextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account? "
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/txt_size_18"
        android:gravity="center"
        android:layout_gravity="center_vertical"

        />
    <com.mislbd.ababil.widget.AppTextViewRegular
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_size_18"
        android:gravity="center"
        android:layout_gravity="center_vertical"

        />


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_35"
        android:layout_above="@id/signup_layer"
        >



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            >

            <com.mislbd.ababil.widget.AppEditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/username"
                android:textColorHint="@color/colorAccent"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_size_14"
                android:inputType="text"
                android:maxLines="1"
                android:padding="@dimen/margin_15"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:theme="@style/TextLabel"
            >

            <com.mislbd.ababil.widget.AppEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_password"
                android:textColorHint="@color/colorAccent"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_size_14"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="@dimen/margin_15"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>


        <com.mislbd.ababil.widget.AppButton
            android:id="@+id/sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_size_16"
            android:text="@string/action_sign_in"
            android:layout_marginTop="@dimen/margin_50"

            />


    </LinearLayout>


</RelativeLayout>
        </RelativeLayout>

</RelativeLayout>