<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <com.mislbd.ababil.widget.AppTextViewRegular
            android:id="@+id/tra_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Transaction \nDate"
            android:textSize="@dimen/txt_size_14"
            android:textColor="@android:color/white"
            android:padding="@dimen/txt_padding_5"
            android:gravity="center"
            android:background="@drawable/table_bg"
            />

        <com.mislbd.ababil.widget.AppTextViewRegular
            android:id="@+id/tra_amount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Transaction \nAmount"
            android:textSize="@dimen/txt_size_14"
            android:textColor="@android:color/white"
            android:padding="@dimen/txt_padding_5"
            android:gravity="center"
            android:background="@drawable/table_bg"
            />

        <com.mislbd.ababil.widget.AppTextViewRegular
            android:id="@+id/tra_narra"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Transaction \nNarration"
            android:textSize="@dimen/txt_size_14"
            android:textColor="@android:color/white"
            android:padding="@dimen/txt_padding_5"
            android:gravity="center"
            android:background="@drawable/table_bg"
            />

        <com.mislbd.ababil.widget.AppTextViewRegular
            android:id="@+id/account_no"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Account \nNumber"
            android:textSize="@dimen/txt_size_14"
            android:textColor="@android:color/white"
            android:padding="@dimen/txt_padding_5"
            android:gravity="center"
            android:background="@drawable/table_bg"
            />


        <com.mislbd.ababil.widget.AppTextViewRegular
            android:id="@+id/instalment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Instalment"
            android:textSize="@dimen/txt_size_14"
            android:textColor="@android:color/white"
            android:padding="@dimen/txt_padding_5"
            android:gravity="center"
            android:background="@drawable/table_bg"
            />
    </LinearLayout>
</LinearLayout>