<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/dashboard_wall"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/semi_transparent"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <RelativeLayout
                android:id="@+id/balance_layer"
                android:layout_width="@dimen/dashboard_balance_size"
                android:layout_height="@dimen/dashboard_balance_size"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_with_border"
                >

                <com.mislbd.ababil.widget.AppTextViewBold
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_size_25"
                    android:text="1,23,000"
                    android:layout_centerInParent="true"
                    />

                <com.mislbd.ababil.widget.AppTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/total"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_size_16"
                    android:text="BDT"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/margin_10"
            >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_5"
                >
            <LinearLayout
                android:id="@+id/mini_statement"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="@dimen/dashboard_option_size"
                    android:layout_height="@dimen/dashboard_option_size"
                    android:src="@drawable/bill"
                    android:background="@drawable/bill_bg"
                    android:padding="@dimen/dashboard_option_padding"
                    android:layout_gravity="center_horizontal"
                    />
                <com.mislbd.ababil.widget.AppTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mini Statement"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_size_10"
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/txt_padding_5"
                    />

            </LinearLayout>

    <LinearLayout
        android:id="@+id/transfer"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="@dimen/dashboard_option_size"
            android:layout_height="@dimen/dashboard_option_size"
            android:src="@drawable/transfer"
            android:background="@drawable/transfer_bg"
            android:padding="@dimen/dashboard_option_padding"
            android:layout_gravity="center_horizontal"
            />
        <com.mislbd.ababil.widget.AppTextViewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transfer"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_size_10"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/txt_padding_5"
            />

    </LinearLayout>

                </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_5"
                >
            <LinearLayout
                android:id="@+id/receive"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="@dimen/dashboard_option_size"
                    android:layout_height="@dimen/dashboard_option_size"
                    android:src="@drawable/many_more"
                    android:background="@drawable/receive_bg"
                    android:padding="@dimen/dashboard_option_padding"
                    android:layout_gravity="center_horizontal"
                    />
                <com.mislbd.ababil.widget.AppTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Receive"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_size_10"
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/txt_padding_5"
                    />

            </LinearLayout>

    <LinearLayout
        android:id="@+id/top_up"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="@dimen/dashboard_option_size"
            android:layout_height="@dimen/dashboard_option_size"
            android:src="@drawable/topup"
            android:background="@drawable/top_up_bg"
            android:padding="@dimen/dashboard_option_padding"
            android:layout_gravity="center_horizontal"
            />
        <com.mislbd.ababil.widget.AppTextViewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top-Up"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_size_10"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/txt_padding_5"
            />

    </LinearLayout>

                </LinearLayout>
</LinearLayout>
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_5"
        android:paddingRight="@dimen/margin_5"
        >

        <com.mislbd.ababil.widget.AppTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction History"
            android:textSize="@dimen/txt_size_18"
            android:textColor="@color/history_txt_color"
            android:padding="@dimen/txt_padding_10"

            />

        <include layout="@layout/recycle_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/txt_padding_10"/>

    </LinearLayout>

</LinearLayout>

</RelativeLayout>