<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nav_bg"
    tools:context="com.mislbd.ababil.activity.StatementTableActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/table_bg"
        android:layout_margin="@dimen/margin_10"
        >
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"

     >

     <com.mislbd.ababil.widget.AppTextViewBold
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="match_parent"
         android:text="Transaction \nDate"
         android:textSize="@dimen/txt_size_16"
         android:textColor="@android:color/white"
         android:padding="@dimen/txt_padding_5"
         android:gravity="center"
         android:background="@drawable/table_bg"
         />

     <com.mislbd.ababil.widget.AppTextViewBold
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="match_parent"
         android:text="Transaction \nAmount"
         android:textSize="@dimen/txt_size_16"
         android:textColor="@android:color/white"
         android:padding="@dimen/txt_padding_5"
         android:gravity="center"
         android:background="@drawable/table_bg"
         />

     <com.mislbd.ababil.widget.AppTextViewBold
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="match_parent"
         android:text="Transaction \nNarration"
         android:textSize="@dimen/txt_size_16"
         android:textColor="@android:color/white"
         android:padding="@dimen/txt_padding_5"
         android:gravity="center"
         android:background="@drawable/table_bg"
         />

     <com.mislbd.ababil.widget.AppTextViewBold
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="match_parent"
         android:text="Account \nNumber"
         android:textSize="@dimen/txt_size_16"
         android:textColor="@android:color/white"
         android:padding="@dimen/txt_padding_5"
         android:gravity="center"
         android:background="@drawable/table_bg"
         />


     <com.mislbd.ababil.widget.AppTextViewBold
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="match_parent"
         android:text="Instalment"
         android:textSize="@dimen/txt_size_16"
         android:textColor="@android:color/white"
         android:padding="@dimen/txt_padding_5"
         android:gravity="center"
         android:background="@drawable/table_bg"
         />
 </LinearLayout>

        <include layout="@layout/recycle_list_view"/>

    </LinearLayout>

</RelativeLayout>
