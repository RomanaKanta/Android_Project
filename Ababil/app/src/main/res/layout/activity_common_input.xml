<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/nav_bg"
    tools:context="com.mislbd.ababil.activity.CommonInputActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <com.mislbd.ababil.widget.AppTextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All type of input field are here"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_size_18"
        android:padding="@dimen/txt_padding_10"
        />

    <com.mislbd.ababil.widget.AppTextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toggle Button"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_size_18"
        android:padding="@dimen/txt_padding_10"
        />

    <ToggleButton android:id="@+id/toggle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"/>

    <com.mislbd.ababil.widget.AppTextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Type (Radio Button)"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_size_18"
        android:padding="@dimen/txt_padding_10"
        />

    <RadioGroup
        android:layout_marginTop="10dp"
        android:id="@+id/radiogroup_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/metric"
        android:layout_gravity="left"
        android:orientation="horizontal"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acc1"
            android:layout_marginLeft="10dp"
            android:button="@drawable/selector_radio"
            android:textColor="@android:color/white"
            android:text="Type 1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acc2"
            android:layout_marginLeft="10dp"
            android:button="@drawable/selector_radio"
            android:textColor="@android:color/white"
            android:text="Type 2" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acc3"
            android:layout_marginLeft="10dp"
            android:button="@drawable/selector_radio"
            android:textColor="@android:color/white"
            android:text="Type 3" />

    </RadioGroup>

    <com.mislbd.ababil.widget.AppTextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Type (Check Box)"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_size_18"
        android:padding="@dimen/txt_padding_10"
        />


    <CheckBox
        android:id="@+id/checkbox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type 1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_size_16"
        android:gravity="center"
        android:padding="@dimen/txt_padding_5"
        android:layout_marginLeft="@dimen/margin_10"
        android:button="@drawable/custom_checkbox"/>

    <CheckBox
        android:id="@+id/checkbox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type 2"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_size_16"
        android:gravity="center"
        android:padding="@dimen/txt_padding_5"
        android:layout_marginLeft="@dimen/margin_10"
        android:button="@drawable/custom_checkbox"/>

    <CheckBox
        android:id="@+id/checkbox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type 3"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_size_16"
        android:gravity="center"
        android:padding="@dimen/txt_padding_5"
        android:layout_marginLeft="@dimen/margin_10"
        android:button="@drawable/custom_checkbox"/>



    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TextLabel"
        >

        <com.mislbd.ababil.widget.AppEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Account Type"
            android:textColorHint="@color/colorAccent"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_size_16"
            android:inputType="text"
            android:maxLines="1"
            android:padding="@dimen/margin_15"
            android:layout_margin="@dimen/margin_15"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:id="@+id/spinner"
        android:spinnerMode="dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Type"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_size_16"
        android:layout_margin="@dimen/margin_15"
        android:background="@color/colorPrimary"
        android:popupBackground="@color/colorPrimary"
        />

</LinearLayout>
</ScrollView>
